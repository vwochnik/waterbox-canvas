{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module":"es2020",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
